@model PhoneBook.Models.Email

<!-- Modal -->
<div class="modal fade" id="AddEmailModal" tabindex="-1" aria-labelledby="AddEmailLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="AddEmailLabel">Add Email</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="Customers" asp-action="AddEmail" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="CustomerId" />

                    <div class="mt-3">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>

                    <div class="mt-3">
                        <label asp-for="EmailTypeId" class="control-label"></label>
                        <select asp-for="EmailTypeId" class="form-control" asp-items="ViewBag.EmailTypeId"></select>
                        <span asp-validation-for="EmailTypeId" class="text-danger"></span>
                    </div>

                    <div class="mt-3">
                        <input type="submit" value="Add" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>